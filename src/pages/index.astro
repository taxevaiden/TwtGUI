---
import Layout from "../layouts/Layout.astro";
import TweetFeed from "../components/TweetFeed.astro";
import TweetForm from "../components/TweetForm.astro";
---

<Layout>
    <div class="sticky top-0 left-0 p-4 z-10">
		<!-- tweet Form! -->
        <TweetForm />
        <hr class="shadow-glow mt-4" />
    </div>

    <!-- tweet feed -->
    <div class="p-4 max-h-[calc(100%-4rem)] overflow-y-auto">
        <TweetFeed server:defer />
		<!-- enable Server Islands mode whatever so it's dynamic -->
    </div>
</Layout>
